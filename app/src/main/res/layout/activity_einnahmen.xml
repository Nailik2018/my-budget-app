<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/input-einnahmen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EinnahmenActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView-einnahmen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name der Einnahme eingeben" />

        <EditText
            android:id="@+id/inputTextEinnahme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text" />

        <TextView
            android:id="@+id/textView-Einnahme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Betrag der Einnahme eingeben" />

        <EditText
            android:id="@+id/inputNumberEinnahme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number" />

        <Button
            android:id="@+id/btn-einnahmen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:onClick="createEinnahme(inputTextEinnahme, inputNumberEinnahme)"
            android:text="Einnahmen erstellen" />
    </LinearLayout>

    <Button
        android:id="@+id/btn-zurueck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="ZurÃ¼ck"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>